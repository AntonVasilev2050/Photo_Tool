<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/photosFragment"
        android:name="com.avv2050soft.unsplashtool.presentation.PhotosFragment"
        android:label="@string/photos_fragment_label" />

    <fragment
        android:id="@+id/collectionsFragment"
        android:name="com.avv2050soft.unsplashtool.presentation.CollectionsFragment"
        android:label="@string/collections_fragment_label">
    </fragment>

    <fragment
        android:id="@+id/userFragment"
        android:name="com.avv2050soft.unsplashtool.presentation.UserFragment"
        android:label="@string/user_fragment_label" />
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.avv2050soft.unsplashtool.presentation.LoginFragment"
        android:label="Onboarding"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_onboardingFragment_to_photosFragment"
            app:destination="@+id/photosFragment"
            app:popUpTo="@+id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.avv2050soft.unsplashtool.presentation.SplashFragment"
        android:label=""
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment" />
    </fragment>

</navigation>